<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:gravity="center"
    tools:context=".References">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"
        android:contentDescription="bg" />

    <!-- Semi-Transparent Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="References"
            android:fontFamily="@font/merriweather_light"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:gravity="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

        <!-- Reference Name -->
        <EditText
            android:id="@+id/reference_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reference Name"
            android:layout_marginBottom="15dp"
            android:padding="15dp"
            android:fontFamily="@font/merriweather_light"
            android:textColor="@color/blue"
            android:inputType="text"
            android:textSize="20dp"
            android:background="@drawable/edittext_border" />

        <!-- Reference Contact -->
        <EditText
            android:id="@+id/reference_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reference Contact (Email/Phone)"
            android:layout_marginBottom="15dp"
            android:padding="15dp"
            android:fontFamily="@font/merriweather_light"
            android:textColor="@color/blue"
            android:inputType="text"
            android:textSize="20dp"
            android:background="@drawable/edittext_border" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#898787"/>

        <!-- Reference Name -->
        <EditText
            android:id="@+id/reference_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reference Name"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:padding="15dp"
            android:fontFamily="@font/merriweather_light"
            android:textColor="@color/blue"
            android:inputType="text"
            android:textSize="20dp"
            android:background="@drawable/edittext_border" />

        <!-- Reference Contact -->
        <EditText
            android:id="@+id/reference_contact2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reference Contact (Email/Phone)"
            android:layout_marginBottom="15dp"
            android:padding="15dp"
            android:fontFamily="@font/merriweather_light"
            android:textColor="@color/blue"
            android:inputType="text"
            android:textSize="20dp"
            android:background="@drawable/edittext_border" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#898787"/>

        <!-- Reference Name -->
        <EditText
            android:id="@+id/reference_name3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reference Name"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:padding="15dp"
            android:fontFamily="@font/merriweather_light"
            android:textColor="@color/blue"
            android:inputType="text"
            android:textSize="20dp"
            android:background="@drawable/edittext_border" />

        <!-- Reference Contact -->
        <EditText
            android:id="@+id/reference_contact3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reference Contact (Email/Phone)"
            android:layout_marginBottom="15dp"
            android:padding="15dp"
            android:fontFamily="@font/merriweather_light"
            android:textColor="@color/blue"
            android:inputType="text"
            android:textSize="20dp"
            android:background="@drawable/edittext_border" />

        <!-- Buttons Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_cancel"
                android:layout_marginEnd="10dp"
                android:paddingVertical="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Submit"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_submit"
                android:layout_marginStart="10dp"
                android:paddingVertical="12dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
